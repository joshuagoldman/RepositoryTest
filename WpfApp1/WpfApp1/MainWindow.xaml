<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000" >
    <Grid Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="80" />
            <RowDefinition Height="40"/>
            <RowDefinition Height="80" />
            <RowDefinition Height="40"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="1" Content="Information" Background="Aqua" FontSize="25" HorizontalContentAlignment="Center"/>
        <ScrollViewer Grid.Column="1" Grid.Row="2" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal">
                <Grid Name="InputDateWithIndexGrid" Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="InputDateWithIndexLabel" Grid.Row="0" Content="Input Date with Index" Background="Blue"/>
                    <TextBox x:Name="InputDateWithIndexValue" Grid.Row="1" Width="130"></TextBox>
                </Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="CriteriaReferenceWithRevisionLabel" Grid.Row="0" Background="Blue" Content="Criteria Reference with Revision" />
                    <TextBox x:Name="CriteriaReferenceWithRevisionValue" Grid.Row="1"></TextBox>
                </Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="ResponsibleLabel" Grid.Row="0" Background="Blue" Content="Responsible"/>
                    <TextBox x:Name="ResponsibleValue" Grid.Row="1"></TextBox>
                </Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="ReasonLabel" Grid.Row="0" Background="Blue" Content="Reason"/>
                    <TextBox x:Name="ReasonValue" Grid.Row="1"></TextBox>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <Label Grid.Column="1" Grid.Row="3" Content="Searchsettings" Background= "Red" FontSize="25" HorizontalContentAlignment="Center"/>
        <ScrollViewer Grid.Column="1" Grid.Row="4" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="kk" Width="100">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SearchKeyOptions}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox x:Name="jk" Width="100">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SearchKeyOptions}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>
        <Label Grid.Column="1" Grid.Row="5" Content="Report" Background= "Chocolate" FontSize="25" HorizontalContentAlignment="Center"/>
        <ScrollViewer Grid.Column="1" Grid.Row="6" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="ooo" Width="100">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SearchKeyOptions}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox x:Name="lll" Width="100">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SearchKeyOptions}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
